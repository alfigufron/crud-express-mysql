<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data Siswa</title>
  <%- include('./../includes/css') %>
</head>
<body>
  <h3 class="mt-4 text-center">Data Siswa</h3>

  <div class="container">
    <div class="row">
      <div class="col-md-12 mt-3">
        <div class="card shadow-sm">
          <div class="card-body">
            <a href="/student/add" class="btn btn-outline-primary btn-block mb-3">Tambah Data</a>

            <div class="table-responsive">
              <table class="table text-center table-bordered">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Kelas</th>
                    <th>Opsi</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach(function(student, index) { %>
                  <tr>
                    <td><%= index+1 %></td>
                    <td><%= student.name %></td>
                    <td><%= student.class %></td>
                    <td>
                      <a href="/student/edit/<%= student.id %>" class="btn btn-outline-info">Edit</a>
                      <form action="/student/delete/<%= student.id %>" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">Hapus</button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('./../includes/js') %>
</body>
</html>