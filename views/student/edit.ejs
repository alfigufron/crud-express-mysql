<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Data Siswa</title>
  <%- include('./../includes/css') %>
</head>
<body>
  <h3 class="mt-4 text-center">Edit Data Siswa</h3>

  <div class="container">
    <div class="row">
      <div class="col-md-12 mt-3">
        <div class="card shadow-sm">
          <div class="card-body">
            <form action="/student/update/<%= student.id %>" method="post">

              <div class="form-group">
                <label>Nama Siswa</label>
                <input type="text" name="name" class="form-control" value="<%= student.name %>">
              </div>

              <div class="form-group">
                <label>Kelas</label>
                <select class="form-control" name="class">
                  <option value="10"
                  <% if(student.class == 10) { %> selected <% } %> >X</option>
                  <option value="11"
                  <% if(student.class == 11) { %> selected <% } %> >XI</option>
                  <option value="12"
                  <% if(student.class == 12) { %> selected <% } %> >XII</option>
                </select>
              </div>

              <button type="submit" class="btn btn-primary btn-block">Simpan Data</button>
              <a href="/student" class="btn btn-danger btn-block">Kembali</a>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('./../includes/js') %>
</body>
</html>